{
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "baseUrl": "src/",
        "paths": {
            "@components/*": [
                "components/*"
            ],
            "@lib/*": [
                "lib/*"
            ],
            "@hooks/*": [
                "hooks/*"
            ],
            "@types/*": [
                "types/*"
            ],
            "@app/*": [
                "app/*"
            ],
            "@api/*": [
                "api/*"
            ]
        },
        "skipLibCheck": true,
        "strict": false,
        "noEmit": true,
        "incremental": true,
        "module": "esnext",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ],
        "strictNullChecks": true
    },
    "include": [
        "next-env.d.ts",
        ".next/types/**/*.ts",
        "**/*.ts",
        "**/*.tsx",
        "next.config.js"
    ],
    "exclude": [
        "node_modules"
    ]
}